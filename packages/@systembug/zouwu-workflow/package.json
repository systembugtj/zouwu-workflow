{
    "name": "@systembug/workflow-schema",
    "version": "1.0.0",
    "description": "Systembug工作流Schema定义和运行时验证器 - 核心包",
    "keywords": [
        "workflow",
        "schema",
        "validation",
        "yaml",
        "typescript",
        "cli"
    ],
    "author": "Albert Li <albert_lee@hotmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/",
        "schemas/",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./schemas": "./schemas/index.json",
        "./schemas/*": "./schemas/*",
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "node scripts/build.js",
        "test": "npx jest",
        "test:watch": "npx jest --watch",
        "test:coverage": "npx jest --coverage",
        "compile": "tsc",
        "lint": "eslint src/ --ext .ts",
        "format": "prettier --write src/ schemas/",
        "dev": "npm run compile && npm test",
        "prepublishOnly": "npm run lint && npm run test && npm run build"
    },
    "dependencies": {
        "@systembug/zouwu-expression-parser": "file:../zouwu-expression-parser",
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^18.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "prettier": "^3.0.0",
        "ts-jest": "^29.0.0",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0",
        "yaml": "^2.3.0"
    },
    "peerDependencies": {
        "typescript": ">=4.0.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
