{
    "name": "@systembug/workflow-cli",
    "version": "1.0.0",
    "description": "Systembug工作流命令行工具 - CLI工具包",
    "keywords": [
        "workflow",
        "schema",
        "cli",
        "typescript",
        "code-generation",
        "validation"
    ],
    "author": "Albert Li <albert_lee@hotmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "workflow": "./dist/cli/index.js"
    },
    "files": [
        "dist/",
        "templates/",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./templates": "./templates/",
        "./templates/*": "./templates/*",
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "node scripts/build.js",
        "test": "node scripts/test.js",
        "compile": "tsc",
        "lint": "eslint src/ --ext .ts",
        "format": "prettier --write src/ templates/",
        "dev": "npm run compile && npm test",
        "cli": "npx tsx src/cli/index.ts",
        "prepublishOnly": "npm run lint && npm run test && npm run build"
    },
    "dependencies": {
        "@systembug/workflow-schema": "^1.0.0",
        "commander": "^9.5.0",
        "chalk": "^4.1.2",
        "js-yaml": "^4.1.0",
        "json-schema-to-typescript": "^13.1.1"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^18.0.0",
        "typescript": "^5.0.0",
        "jest": "^29.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "@types/jest": "^29.0.0",
        "tsx": "^4.0.0"
    },
    "peerDependencies": {
        "typescript": ">=4.0.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
